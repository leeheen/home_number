void Shuffle(int arr[], int size)
{
    for (int i = size - 1; i > 0; i--) {
        int j = rand() % (i + 1);
        int tmp = arr[i];
        arr[i] = arr[j];
        arr[j] = tmp;
    }
}
void Easy()
{
    int board[EASY_i][EASY_j] = {0};
    int fake_board[EASY_i][EASY_j] = { 0 };
    for (int i = 0; i < EASY_i; i++) {
        for (int j = 0; j < EASY_j; j++) {
            fake_board[i][j] = MASK;
        }
    }
    int cards[EASY_i * EASY_j] = { 0 };
    for (int i = 0; i < EASY_i * EASY_j; i++) {
        cards[2 * i] = i + 1;
        cards[2 * i + 1] = i + 1;
    }

    srand(time(NULL));
    
    shuffle(cards, EASY_i * EASY_j);


}
